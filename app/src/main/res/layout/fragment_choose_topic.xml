<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    tools:context=".pages.fragment.ChooseTopicFragment">

    <EditText
        android:id="@+id/choose_topic_input"
        android:layout_width="wrap_content"
        android:layout_toStartOf="@id/choose_topic_search"
        android:layout_alignParentStart="true"
        android:background="@drawable/border_capsule_28dp"
        android:layout_margin="8dp"
        android:layout_height="28dp"
        android:importantForAutofill="no"
        android:maxLines="1"
        android:inputType="text"
        android:hint="输入要搜索的版块"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        tools:ignore="LabelFor" />

    <ImageView
        android:id="@+id/choose_topic_search"
        android:background="@drawable/ic_search_grey_128dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:layout_width="28dp"
        android:layout_height="28dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/choose_topic_list"
        android:layout_below="@id/choose_topic_search"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="256dp" />


</RelativeLayout>